{
  "name": "@mancuoj/hooks",
  "type": "module",
  "version": "0.0.2",
  "packageManager": "pnpm@8.15.4",
  "description": "Collection of common React hooks",
  "author": "Mancuoj <mancuoj@gmail.com>",
  "license": "MIT",
  "repository": "mancuoj/hooks",
  "keywords": [
    "react",
    "typescript",
    "hooks"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "lint": "eslint . && tsc",
    "test": "pnpm lint && vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui --coverage",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "pnpm test && pnpm build",
    "release": "bumpp && pnpm publish"
  },
  "peerDependencies": {
    "react": "^16.8.0  || ^17 || ^18"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.8.2",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^20.11.27",
    "@types/react": "^18.2.65",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "bumpp": "^9.4.0",
    "eslint": "^8.57.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "react": "^18.2.0",
    "simple-git-hooks": "^2.10.0",
    "typescript": "^5.4.2",
    "unbuild": "^2.0.0",
    "vitest": "^1.3.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "publishConfig": {
    "access": "public"
  }
}
